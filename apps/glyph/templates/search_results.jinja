{% extends "base.jinja" %}
{% block title %}Search Results for {{ term }}{% endblock %}
{% block content %}
    <div class="container-fluid">
    {% if signs|length > 0 %}
        <h3>Signs</h3>
            <table class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Sign</th>
                    </tr>
                </thead>
                <tbody>
                    {%- for sign in signs %}
                    <tr>
                        <td><a href="{{ url_for(".cdp", sign_id=sign.id) }}"><h4>CDP Records for sign "{{ sign.sign_ref }}"</h4></a></td>
                    </tr>
                    {%- endfor %}
                </tbody>
            </table>
        {% endif %}
        {% if tablets|length > 0 %}
            <h3>Tablets</h3>
            <table class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Museum Number</th>
                        <th>Medium</th>
                        <th>Period</th>
                    </tr>
                </thead>
                <tbody>
                    {%- for tablet in tablets %}
                    <tr>
                        <td><a href="{{ url_for(".tablet", tablet_id=tablet.id) }}"><h4>{{ tablet.museum_number }}</h4></a></td>
                        <td>{{ tablet.medium.name }}</td>
                        <td>{{ tablet.period.name }}</td>
                    </tr>
                    {%- endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}
{% block sidebar %}
    {% set result_length = signs|length + tablets|length %}
    <h3>Search results for "{{ term }}"</h3>
    <h4>{{ result_length }} {{ 'results' if result_length > 1 else 'result' }} found</h4>
{% endblock %}
